<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SelectBox">
        <attr name="isSelected" format="boolean"/>
        <attr name="strokeColor" format="color"/>
        <attr name="textColor" format="color"/>
        <attr name="boxContent" format="string" />
    </declare-styleable>

    <declare-styleable name="SelectCategory">
        <attr name="isCategorySelected" format="boolean"/>
        <attr name="titleTag" format="string"/>
        <attr name="categoryTitle" format="string"/>
        <attr name="categoryContent" format="string"/>
        <attr name="categoryStrokeColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="ExposedDropdownMenu">
        <attr name="menuTitle" format="string"/>
    </declare-styleable>


    <!-- 증상 관련 커스텀 속성 정의 -->
    <declare-styleable name="SymptomViews">
        <attr name="symptomTitle" format="string" />
        <attr name="useGeneralVM" format="boolean"/>
        <attr name="generalVM" format="reference"/>
        <attr name="questionVM" format="reference"/>

        <attr name="symptomContent" format="string" />
        <attr name="symptomRegion" format="string" />
        <attr name="symptomDate" format="string" />
        <attr name="symptomType" format="string" />
        <attr name="symptomDegree" format="string" />
        <attr name="symptomWorseList" format="string" />
        <attr name="symptomOtherSymptom" format="string" />
        <attr name="fieldType" format="string" />
        <attr name="symptomField" format="string" />
    </declare-styleable>

</resources>