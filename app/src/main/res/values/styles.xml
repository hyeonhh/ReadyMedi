<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomSliderStyle"
        parent="Widget.MaterialComponents.Slider">
        <item name="labelStyle">@style/Widget.App.Tooltip</item>
        <item name="thumbColor">@color/red40</item>
        <item name="trackHeight">7dp</item>
        <item name="trackColorActive">@color/red40</item>
        <item name="trackColorInactive">@color/red20</item>
    </style>

    <style name="Widget.App.Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <item name="android:textAppearance">@style/Body2_Normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/red40</item>
    </style>


    <style name="CustomChipStyle"
        parent="@style/Widget.Material3.Chip.Suggestion">
        <item name="chipStrokeColor">@color/chip_stroke_color</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipCornerRadius">100dp</item>
        <item name="android:textColor">@color/chip_color</item>
    </style>

    <style name="CustomButtonStyle_Disabled"
        parent="@style/ThemeOverlay.Material3.Button">
        <item  name="cornerRadius">16dp</item>
        <item name="backgroundTint">@color/gray80</item>
        <item  name="android:padding">20dp</item>
        <item name="android:textColor">@color/gray50</item>
    </style>
    
    <style name="CustomButtonStyle"
        parent="@style/ThemeOverlay.Material3.Button">
        <item  name="cornerRadius">16dp</item>
        <item name="backgroundTint">@color/blue90</item>
        <item  name="android:padding">20dp</item>
    </style>

    <style name="CustomButtonStyle3"
        parent="@style/ThemeOverlay.Material3.Button">
        <item name="android:padding">10dp</item>
        <item  name="cornerRadius">100dp</item>
        <item name="backgroundTint">@color/blue50</item>
        <item  name="android:textColor">@color/white</item>
    </style>

    <style name="CustomButtonStyle4"
        parent="@style/ThemeOverlay.Material3.Button">
        <item name="android:padding">10dp</item>
        <item  name="cornerRadius">100dp</item>
        <item name="backgroundTint">@color/gray30</item>
        <item  name="android:textColor">@color/gray90</item>
    </style>



    <style name="CustomButtonStyle2"
        parent="@style/ThemeOverlay.Material3.Button">
        <item  name="cornerRadius">16dp</item>
        <item name="backgroundTint">@color/blue50</item>
        <item  name="android:padding">20dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomAllTextTitleStyle"
        parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">6dp</item>
        <item name="android:textAppearance">@style/Body1_Normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/free_hospital_policy_textview_5dp</item>
    </style>


    <style name="CustomAllSubTitleStyle"
        parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/blue50</item>
        <item name="android:padding">6dp</item>
        <item name="android:textAppearance">@style/Label1_Normal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/free_hospital_policy_textview_5dp_gray</item>
    </style>

    <style name="CustomAllQuestionTitle"
        parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/gray95</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:paddingHorizontal">8dp</item>
        <item name="android:textAppearance">@style/Body2_Reading</item>
        <item name="android:background">@drawable/free_hospital_policy_textview_5dp_gray</item>
    </style>

</resources>