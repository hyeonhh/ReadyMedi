<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_digest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/digestive_circulatory_symptoms"
            android:textAppearance="@style/Body1_Normal"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

        <ImageButton
            android:id="@+id/btn_symptom"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

        <LinearLayout
            android:id="@+id/layout_digestive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView">

            <com.teammeditalk.medicalconnect.ui.util.SelectCategory
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:categoryContent="@string/symptom_abdominal_pain_desc"
            app:categoryTitle="@string/symptom_abdominal_pain"
            app:isCategorySelected="false" />

            <com.teammeditalk.medicalconnect.ui.util.SelectCategory
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:categoryContent="@string/symptom_heartburn_desc"
                app:categoryTitle="@string/symptom_heartburn"
                app:isCategorySelected="false" />

            <com.teammeditalk.medicalconnect.ui.util.SelectCategory
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:categoryContent="@string/symptom_nausea_desc"
                app:categoryTitle="@string/symptom_nausea"
                app:isCategorySelected="false" />

            <com.teammeditalk.medicalconnect.ui.util.SelectCategory
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:categoryContent="@string/symptom_bowel_issue_desc"
                app:categoryTitle="@string/symptom_bowel_issue"
                app:isCategorySelected="false" />

            <com.teammeditalk.medicalconnect.ui.util.SelectCategory
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:categoryContent="@string/symptom_indigestion_desc"
                app:categoryTitle="@string/symptom_indigestion"
                app:isCategorySelected="false" />

            <com.teammeditalk.medicalconnect.ui.util.SelectCategory
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:categoryContent="@string/symptom_chest_pain_desc"
                app:categoryTitle="@string/symptom_chest_pain"
                app:isCategorySelected="false" />

            <com.teammeditalk.medicalconnect.ui.util.SelectCategory
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:categoryContent="@string/symptom_heart_palpitation_desc"
                app:categoryTitle="@string/symptom_heart_palpitation"
                app:isCategorySelected="false" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

